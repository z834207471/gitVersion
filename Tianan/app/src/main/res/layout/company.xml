<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/register2format"
        android:layout_height="52dp"
        android:background="@color/darkcyan"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/darkcyan"
            android:gravity="center"
            android:text="公司信息"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkcyan"
            android:gravity="center">

            <Button
                android:id="@+id/changecompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/companybut" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanyname"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="公司名称:"
            />
        <TextView
            android:id="@+id/mycompanynametext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="威海睿博公司" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanystyle"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="公司类型:" />

        <TextView
            android:id="@+id/mycompanystyletext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="企业" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mybuildare"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="建筑面积:" />

        <TextView
            android:id="@+id/myaretext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:drawableRight="@mipmap/pdff"
            android:paddingRight="10dp"
            android:text="200" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanyadress"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="公司地址:" />

        <TextView
            android:id="@+id/mycompanyadresstext"
            style="@style/macompanytextstyle"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="经区技术开发中心后楼软件科技孵化中心16楼" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanytime"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="开始时间:" />

        <TextView
            android:id="@+id/mycompanytimetext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="2016年8月14日" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myadress"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="结束时间:" />

        <TextView
            android:id="@+id/myadresstext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="2016年9月14日" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />

    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanynature"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="使用性质:" />

        <TextView
            android:id="@+id/mynaturetext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="现场客户-业主" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <LinearLayout
        style="@style/register2format"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycompanycus"
            style="@style/mycompanynamestyle"
            android:background="@null"
            android:text="历史客户:" />

        <TextView
            android:id="@+id/mucompanycustext"
            style="@style/macompanytextstyle"
            android:background="@null"
            android:text="租主" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>