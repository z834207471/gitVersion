<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AboutMe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/darkcyan"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/inforleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:gravity="left"
            android:src="@mipmap/left"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/darkcyan"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkcyan"
            android:gravity="center">


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="公司介绍:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/title_gray"
        android:text="      威海博睿软件科技有限公司是专业从事企业管理咨询、软件开发、系统集成及互联网信息服务等方面高科技企业。 致力于推动企业信息化建设和发展，倡导先进的经营管理思想，引领企业数字化革命、提升核心竞争力！"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="公司地址:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <TextView
        android:layout_width="wrap_content"
        android:background="@color/title_gray"
        android:layout_height="wrap_content"
        android:text="      山东省威海市青岛路107-2号1603"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客服电话:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      1234567"
        android:background="@color/title_gray"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray" />
</LinearLayout>
