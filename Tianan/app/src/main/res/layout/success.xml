<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/title_gray"
        android:gravity="center">

        <TextView
            android:id="@+id/inspet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.验证基本信息"
            android:textColor="@color/darkcyan"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/inspet"
            android:padding="3dp"
            android:src="@mipmap/rightpress" />

        <TextView
            android:id="@+id/reveivhouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.验证入伙信息"
            android:textColor="@color/darkcyan"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/inspet"
            android:padding="3dp"
            android:src="@mipmap/rightpress" />

        <TextView
            android:id="@+id/acknowledgement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.成功"
            android:textColor="@color/darkcyan"
            android:textSize="18sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:src="@mipmap/step1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxEms="12"
            android:text="注册成功!!点击确认按钮返回登录页面。"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <Button
            android:id="@+id/successful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapebut"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>