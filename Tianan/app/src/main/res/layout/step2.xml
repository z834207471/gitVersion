<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:src="@mipmap/step2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="验证通过,请到指定地点领取\n《房屋交付通知书》。"
            android:textColor="@color/black"
            android:textSize="26sp"

            />

        <TextView

            style="@style/register2format"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/danhei"
            android:text="您可以通过以下方式领取《房屋交付通知书》：" />
        <TextView
            android:id="@+id/loading2"
            style="@style/register2format"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/danhei"
            android:text="1、点击下载电子版《房屋交付通知书》。" />
        <TextView
            style="@style/register2format"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/danhei"
            android:text="2、到现场领取纸质版通知书。" />
        <TextView
            style="@style/register2format"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="23dp"
            android:textColor="@color/danhei"
            android:text="地址: 山东省威海市青岛路107-2号1603" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkcyan">

            <TextView
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="如果您有什么疑问请及时联系我们,电话:1234567" />
            <TextView
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="请于2016年8月26日之前领取，过期将重新校验入伙资格" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
   </ScrollView>