<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:src="@mipmap/step3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt5"
                style="@style/register2format"
                android:gravity="center"
                android:text="手续办理通过,完成成入伙流程！"
                android:textColor="@color/black"
                android:textSize="26sp"


                />

            <TextView
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/danhei" />

            <TextView
                android:id="@+id/loading3"
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/danhei" />

            <TextView
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/danhei" />

            <TextView
                style="@style/register2format"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/danhei" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/darkcyan">

                <TextView
                    style="@style/register2format"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="如果您有什么疑问请及时联系我们,电话:1234567" />
                <TextView
                    style="@style/register2format"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="请于2016年8月26日之前领取，过期将重新校验入伙资格" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>